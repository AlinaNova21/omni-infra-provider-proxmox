# Omni Configuration
# The endpoint of the Omni API
# Use https:// for secure connections or grpc:// for local non-HTTPS connections
OMNI_ENDPOINT=https://your-omni-instance.com

# Omni service account key for authentication
OMNI_SERVICE_ACCOUNT_KEY=your-service-account-key

# Provider Configuration
# Provider ID used to match resources with the infra provider label
PROVIDER_ID=proxmox-provider

# Provider name as it appears in Omni
PROVIDER_NAME=Proxmox

# Provider description as it appears in Omni
PROVIDER_DESCRIPTION=Proxmox VE infrastructure provider

# Proxmox VE Configuration
# Proxmox VE API endpoint URL (e.g., https://your-proxmox-host:8006/api2/json)
PROXMOX_URL=https://your-proxmox-host:8006/api2/json

# Proxmox username (e.g., root@pam)
PROXMOX_USER=root@pam

# Proxmox password (use either password or token, not both)
PROXMOX_PASSWORD=your-password

# Proxmox API token (alternative to password authentication)
PROXMOX_TOKEN=your-api-token

# Proxmox authentication realm
PROXMOX_REALM=pam

# Proxmox storage pool for VM disks
PROXMOX_STORAGE_POOL=local

# Proxmox storage pool for downloading images
PROXMOX_IMAGE_STORAGE_POOL=local

# Security Configuration
# Ignore untrusted certificates on Omni side (true/false or 1/0)
INSECURE_SKIP_VERIFY=false

# Ignore untrusted certificates on Proxmox side (true/false or 1/0)
INSECURE_SKIP_TLS=false